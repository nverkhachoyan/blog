---
interface Props {
	items: Array<{
		date: string;
		title: string;
		description?: string;
	}>;
}

const { items } = Astro.props;
---

<div class="my-8 space-y-6">
  {
    items.map((item, index) => (
      <div class="relative pl-8 pb-6 border-l-2 border-border last:border-0 last:pb-0">
        <div class="absolute left-0 top-0 w-3 h-3 rounded-full bg-accent -translate-x-[7px]" />
        <div class="text-xs text-muted-foreground mb-1 uppercase tracking-wider">
          {item.date}
        </div>
        <div class="text-lg font-semibold text-foreground mb-2">
          {item.title}
        </div>
        {item.description && (
          <div class="text-sm text-muted-foreground">{item.description}</div>
        )}
      </div>
    ))
  }
</div>

