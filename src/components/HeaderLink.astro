---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { href, class: className, ...props } = Astro.props;
const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, "");
const subpath = pathname.match(/[^/]+/g);
const isActive = href === pathname || href === `/${subpath?.[0] || ""}`;
---

<a
  href={href}
  class:list={[
    "relative px-3 py-2 text-sm font-medium rounded-lg transition-all duration-200 no-underline",
    "hover:bg-surface/60 hover:text-foreground",
    "active:scale-95",
    {
      "text-foreground bg-surface/40": isActive,
      "text-muted-foreground": !isActive,
    },
    className,
  ]}
  {...props}
>
  <slot />
  {
    isActive && (
      <span class="absolute bottom-1 left-1/2 -translate-x-1/2 w-4 h-0.5 bg-accent rounded-full" />
    )
  }
</a>
