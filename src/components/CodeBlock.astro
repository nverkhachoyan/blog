---
interface Props {
	title?: string;
	language?: string;
	showLineNumbers?: boolean;
}

const { title, language, showLineNumbers = false } = Astro.props;
---

<div class="my-6 overflow-hidden rounded-lg border border-border">
  {
    title && (
      <div class="bg-[oklch(0.16_0.02_290)] border-b border-border px-4 py-2 flex items-center justify-between">
        <span class="text-sm font-mono text-muted-foreground">{title}</span>
        {language && (
          <span class="text-xs text-muted-foreground uppercase tracking-wider">
            {language}
          </span>
        )}
      </div>
    )
  }
  <div class="bg-[oklch(0.2_0.02_294)] overflow-x-auto">
    <slot />
  </div>
</div>
