---
interface Props {
	author: string;
	role?: string;
	image?: string;
	body?: string;
}

const { author, role, image, body } = Astro.props;
---

<div
  class="my-8 bg-card border border-border rounded-lg p-6 shadow-sm hover:border-accent/50 transition-colors"
>
  <div class="flex items-start gap-4">
    {
      image && (
        <img
          src={image}
          alt={author}
          class="w-12 h-12 rounded-full object-cover flex-shrink-0"
        />
      )
    }
    <div class="flex-1">
      <div class="text-foreground mb-4 italic">
       {body ? body : <slot />}
      </div>
      <div class="flex items-center gap-2">
        <div>
          <div class="font-semibold text-foreground">{author}</div>
          {role && <div class="text-sm text-muted-foreground">{role}</div>}
        </div>
      </div>
    </div>
  </div>
</div>
